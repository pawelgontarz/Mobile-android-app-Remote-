<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f2e4a0"
                android:centerColor="#f7e073"
                android:endColor="#f2e4a0"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f77e7a"
                android:centerColor="#da706c"
                android:endColor="#c46461"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#a11d0c" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

